        {
          "name": "Check Server Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.test(\"Server is running\", function () {", "    pm.response.to.have.status(200);", "    var jsonData = pm.response.json();", "    pm.expect(jsonData.success).to.be.true;", "});"]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if server is running"
          },
          "response": []
        }
      ]
